# terminal emulator
super + Return
	tilix

# program launcher
super + f
	rofi -show run -icon-theme /usr/share/rofi/themes/gruvbox-dark-hard.rasi
	
super + r
	rofi -show window -icon-theme /usr/share/rofi/themes/gruvbox-dark-hard.rasi

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# restart bspwm
super + alt + o
    bspc wm -r

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# resize windows
super + alt + {Left,Down,Up,Right}
	~/.config/bspwm/scripts/bspwm_resize {west,south,north,east}

# change desktop
super + p
    bspc desktop -f 1

super + a
    bspc desktop -f 2

# move window to desktop
super + shift + {1-9}
    bspc node -d {1-9}

# close windows
super + q
	bspc node -c
